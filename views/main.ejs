      body {
        background-color: #312244;
        color: white;
        text-align: center;
        /* Removed padding-top to allow auth-box to center vertically */
      }

      .logo {
        margin-bottom: 50px;
      }

      .auth-box {
        background-color: #4b0082; /* Dark purple background */
        border: 2px solid white;
        border-radius: 15px; /* Rounded corners */
        padding: 20px;
        position: fixed;
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(
          -50%,
          -50%
        ); /* Adjust horizontal and vertical alignment */
        z-index: 10; /* To ensure it's above the images */
      }

      .auth-buttons {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }

      .auth-button {
        margin: 0 10px;
        background-color: #6a0dad; /* Purple background */
        color: white; /* White text */
        border: none; /* No border */
        border-radius: 5px; /* Rounded corners */
        padding: 10px 20px; /* Padding inside the buttons */
        text-transform: uppercase; /* Optional: makes the button text uppercase */
        font-weight: bold; /* Optional: makes the button text bold */
        transition: background-color 0.3s; /* Smooth transition for hover effect */
      }

      /* Hover effect for buttons */
      .auth-button:hover {
        background-color: #7b68ee; /* Slightly lighter purple */
        color: white;
      }

      /* ... existing styles ... */

      .image-conveyor {
        display: flex;
        position: fixed;
        left: 0;
        overflow: hidden;
        width: 4086px; /* Twice the total width of all images in a row */
      }

      .image-conveyor img {
        height: 227px;
        width: 227px;
      }

      /* Animation for moving to the left */
      @keyframes moveImagesLeft {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(
            -2043px
          ); /* Move by the total width of images in a row */
        }
      }

      /* Apply the same animation to all conveyors */
      .image-conveyor {
        animation: moveImagesLeft 20s linear infinite;
      }

      /* Positioning for each conveyor */
      .image-conveyor:nth-of-type(1) {
        top: 0;
      }

      .image-conveyor:nth-of-type(2) {
        bottom: 33.5%; /* Adjust based on your layout */
      }

      .image-conveyor:nth-of-type(3) {
        bottom: 0;
      }
    </style>
